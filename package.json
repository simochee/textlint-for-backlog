{
	"version": "1.0.0",
	"private": true,
	"description": "Integrate textlint into Backlog for seamless proofreading",
	"homepage": "http://localhost:3000",
	"type": "module",
	"scripts": {
		"build": "wxt build",
		"compile-textlint": "textlint-script-compiler --output-dir ./vendor",
		"dev": "wxt",
		"postinstall": "lefthook install && wxt prepare",
		"lint:oxfmt": "nr fix:oxfmt --check",
		"lint:oxlint": "oxlint --type-aware --type-check --ignore-path .gitignore --report-unused-disable-directives --tsconfig ./tsconfig.json"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@textlint/script-compiler": "^0.18.5",
		"@tsconfig/vite-react": "^7.0.2",
		"lefthook": "^2.0.15",
		"sort-package-json": "^3.6.0",
		"textlint-rule-preset-ja-technical-writing": "^12.0.2",
		"wxt": "^0.20.13"
	},
	"namespace": "http://localhost:3000"
}
